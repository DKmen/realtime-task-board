# Copy this file to .env.prod and fill in your values before deploying.
# The file is read by:  docker compose -f docker-compose.prod.yml --env-file .env.prod

# ── Required ─────────────────────────────────────────────────────────────────
# Public IPv4 or DNS of your EC2 instance (no http:// prefix, no trailing slash)
EC2_PUBLIC_IP=<your-ec2-public-ip-or-dns>

# ── Database ─────────────────────────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres          # ← change this for production!
POSTGRES_DB=realtime_task_board

# ── Backend ───────────────────────────────────────────────────────────────────
JWT_SECRET=changeme_use_a_strong_secret_in_prod   # ← change this for production!
